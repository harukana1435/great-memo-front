{
  "manifest_version": 3,
  "name": "GREAT Memo",
  "version": "1.0",
  "description": "A simple memo tool for quick notes and link management.",
  "permissions": ["activeTab", "storage", "unlimitedStorage"],
  "host_permissions": ["https://great-memo.vercel.app/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
